#include <stdio.h>
#include <stdlib.h>
#include<math.h>

int main(){
	setvbuf( stdout, NULL, _IONBF, 0 );
	int n,i,factorial;
	x=1;
	printf("Enter the number you want to find the factorial for:");
	scanf("%d", &n);

	factorial = n;
	for(i=n; i > 0; i--){
		factorial = factorial*i;
//		n= i*n;
		printf("The factorial for the number is : %d\n", factorial);
	}


	return 0;
}
