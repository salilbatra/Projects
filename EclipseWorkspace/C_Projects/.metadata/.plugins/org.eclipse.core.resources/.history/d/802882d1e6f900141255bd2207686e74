#include <stdio.h>
#include <stdlib.h>
#include<math.h>

int main(){
	setvbuf( stdout, NULL, _IONBF, 0 );
	int n,x;
	x=1;
	printf("Enter the number you want to find the factorial for:");
	scanf("%d", &n);

	for(x=n; x > 0; x--){
		x = x*(x-1);
//		n= x*n;
		printf("The factorial for the number is : %d\n", x);
	}


	return 0;
}
