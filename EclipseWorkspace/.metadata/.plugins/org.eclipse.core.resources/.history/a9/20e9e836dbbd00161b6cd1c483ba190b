typedef struct database{
	int id, age;
	float salary;
}database;

int main(void) {
	setvbuf(stdout, NULL, _IONBF, 0);

	database emp;
	emp.id = 10;
	emp.age = 40;
	emp.salary = 200.12;

	printf("%d%d%f", emp.id, emp.age, emp.salary);


